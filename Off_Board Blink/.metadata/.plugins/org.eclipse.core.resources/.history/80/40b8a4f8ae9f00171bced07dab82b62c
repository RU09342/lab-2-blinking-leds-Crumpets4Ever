#include <msp430.h>

int main(void)
{
    WDTCTL = WDTPW | WDTHOLD;               // Stop watchdog timer

    P1OUT &= ~BIT4;                         // Clear P1.0 output latch for a defined power-on state
        //Pin2, LED2, is set to low output
    P1DIR |= BIT4;                          // Set P1.0 to output direction
        //Pin2, LED2 is set to be an output
    //PM5CTL0 &= ~LOCKLPM5;                   // Disable the GPIO power-on default high-impedance mode
                                            // to activate previously configured port settings

    while(1)
    {
        P1OUT ^= BIT4;                      // Toggle P1.0 using exclusive-OR
        for(i=5000; i>0; i--);
    }
}
